{
  "name": "Continuation Button",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "ChatGPTに「続き」とワンクリックで入力できるボタンです。",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["https://chat.openai.com/chat/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_title": "Continuation Button",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
